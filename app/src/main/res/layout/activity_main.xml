<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <com.example.customviewtp.CustomView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:custom_component_image="@drawable/ciri"
            app:custom_component_color="@color/colorCiri">
    </com.example.customviewtp.CustomView>

    <com.example.customviewtp.CustomView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:custom_component_image="@drawable/geralt"
            app:custom_component_color="@color/colorGeralt">
    </com.example.customviewtp.CustomView>

    <com.example.customviewtp.CustomView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:custom_component_image="@drawable/yennefer"
            app:custom_component_color="@color/colorYennefer">
    </com.example.customviewtp.CustomView>

    <!-- Use default image / color set in CustomView.kt -->
    <com.example.customviewtp.CustomView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </com.example.customviewtp.CustomView>

</LinearLayout>